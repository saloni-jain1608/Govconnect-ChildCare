<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>RecordType</field>
        <field>CLQ_Program__c</field>
        <field>CLQ_Transaction_Assigned_To__c</field>
        <field>CLQ_Submission_Date__c</field>
        <field>CLQ_Submitter__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>Reactivation Approvals</description>
        <label>Approval Step 1</label>
        <name>CLQ_Approver</name>
    </approvalStep>
    <description>&quot;This process will allow a licensor to send &apos;Reactivate Transaction&apos; to his/her manager for review and approval.</description>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>RecordType.Name = $Label.CLQ_Program_App_Reactivate_Transaction_RecType &amp;&amp; CLQ_Start_Approval__c = true</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>CLQ_Set_Approved_by_Manager_to_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CLQ_Set_Transaction_Status_To_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CLQ_UnFlag_Rejected_By_Manager</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CLQ_Unflag_Start_Approval_Check</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Change_Status_to_Returned_to_Reviewer</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CLQ_Flag_Rejected_By_Manager</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CLQ_Unflag_Start_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>CLQ_Change_Status_to_Approver_Review</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CLQ_Reset_Approved_by_Manager_Flag</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CLQ_UnFlag_Rejected_By_Manager</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Reactivate Transaction Approval Process</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>9</processOrder>
    <recallActions>
        <action>
            <name>CLQ_UnFlag_Rejected_By_Manager</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CLQ_Unflag_Start_Approval_Recall</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Recall_Status_Returned_to_Reviewer</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
