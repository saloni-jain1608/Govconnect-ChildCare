<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>RecordType</field>
        <field>CLQ_Program__c</field>
        <field>CLQ_Transaction_Assigned_To__c</field>
        <field>CLQ_Submission_Date__c</field>
        <field>CLQ_Submitter__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>DC_Admin</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Day Camp Application Approvals</description>
        <label>Queue Approval</label>
        <name>Queue_Approver_Day_Camp</name>
    </approvalStep>
    <description>Approval Process for Day Camp Application</description>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>(1 OR 4) AND  (2 OR 3)</booleanFilter>
        <criteriaItems>
            <field>CLQ_Program_Transaction__c.RecordType</field>
            <operation>equals</operation>
            <value>Application - CC Center</value>
        </criteriaItems>
        <criteriaItems>
            <field>CLQ_Program_Transaction__c.CLQ_Transaction_Status__c</field>
            <operation>equals</operation>
            <value>Under Reviewer Review</value>
        </criteriaItems>
        <criteriaItems>
            <field>CLQ_Program_Transaction__c.CLQ_Transaction_Status__c</field>
            <operation>equals</operation>
            <value>Returned to Reviewer</value>
        </criteriaItems>
        <criteriaItems>
            <field>CLQ_Program_Transaction__c.RecordType</field>
            <operation>equals</operation>
            <value>Renew Application - Day Camp</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approval_Set_Approved_by_Manager_to_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unflag_Start_Approval_Check</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Application_Approved_Date_field</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Change_Status_to_Returned_to_Reviewer</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Rejected_Flag_Rejected_By_Manager</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Rejection_Unflag_Start_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>CLQ_Change_Transaction_Status_to_ARP</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CLQ_Unflag_Approved_By_Manager</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>UnFlag_Rejected_By_Manager</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Day Camp Approval Process</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>13</processOrder>
    <recallActions>
        <action>
            <name>Recall_Status_Returned_to_Reviewer</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Recall_UnCheck_Approved_by_Manager</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Recall_Unflag_Rejected_by_Manager</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unflag_Start_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
