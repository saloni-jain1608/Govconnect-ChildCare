<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>CLQ_Alleged_Ops_Name__c</field>
        <field>CLQ_Intake_By__c</field>
        <field>CLQ_Intake_Date__c</field>
        <field>CLQ_Approver_Comments__c</field>
        <field>CLQ_Status__c</field>
        <field>CLQ_Assigned_To__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Step 1</label>
        <name>CLQ_Step_1</name>
    </approvalStep>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2</booleanFilter>
        <criteriaItems>
            <field>CLQ_Case_Custom__c.RecordType</field>
            <operation>equals</operation>
            <value>Alleged Ops,Alleged Ops Submitted</value>
        </criteriaItems>
        <criteriaItems>
            <field>CLQ_Case_Custom__c.CLQ_Start_Approval__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>CLQ_Check_Approved_by_Manager_field</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CLQ_Start_Approval_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CLQ_Status_Update_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>UnFlag_Rejected_By_Manager</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>CLQ_Approval_Start_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CLQ_Flag_Rejected_By_Manager</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CLQ_Status_Update_Return_to_Reviewer</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CLQ_Uncheck_Approved_by_Manager_field</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>CLQ_Pending_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CLQ_Uncheck_Approval_status_field</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CLQ_unFlag_Rejected_By_Manager</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Alleged Ops Approval Process</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
