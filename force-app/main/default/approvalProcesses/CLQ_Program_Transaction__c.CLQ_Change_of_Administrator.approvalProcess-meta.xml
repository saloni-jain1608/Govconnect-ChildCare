<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>RecordType</field>
        <field>CLQ_Program__c</field>
        <field>CLQ_Transaction_Assigned_To__c</field>
        <field>CLQ_Submission_Date__c</field>
        <field>CLQ_Submitter__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>CLQ_Update_Queue_Name_AppUnit2</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>COA Approvals</description>
        <label>Approval Step 1</label>
        <name>CLQ_Manager_Approval_Step</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>CLQ_Application_Unit_2</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>COA Approvals - AppUnit 2</description>
        <entryCriteria>
            <formula>CONTAINS(CLQ_Program_Record_Type__c  , $Label.CLQ_Program_App_ContainTypeA_RecType)</formula>
        </entryCriteria>
        <label>Approval Step 2</label>
        <name>CLQ_State_Approver_For_type_A</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Approval Process for COA Amendments. COA applies to only ODJFS.</description>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>(TEXT(CLQ_Transaction_Status__c) =  $Label.CLQ_Program_App_Transaction_Status_Under_Reviewer_Review  || TEXT(CLQ_Transaction_Status__c) = $Label.CLQ_Program_App_Transaction_Status_Returned_to_Reviewer ) &amp;&amp; (RecordType.Name = $Label.CLQ_Program_App_Amendment_Change_of_Administrator_RecType
) &amp;&amp; CLQ_Start_Approval__c = true</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approval_Set_Approved_by_Manager_to_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Approval_UnFlag_Rejected_By_Manager</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unflag_Start_Approval_Check</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Change_Status_to_Returned_to_Reviewer</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Rejected_Flag_Rejected_By_Manager</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Rejection_Unflag_Start_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>CLQ_Change_Transaction_Status_to_ARP</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CLQ_Reset_Approved_by_Manager_Flag</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CLQ_Update_Manager_s_Email_Address</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>UnFlag_Rejected_By_Manager</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Change of Administrator</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>5</processOrder>
    <recallActions>
        <action>
            <name>Recall_Status_Returned_to_Reviewer</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Recall_UnCheck_Approved_by_Manager</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Recall_Unflag_Rejected_by_Manager</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unflag_Start_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
