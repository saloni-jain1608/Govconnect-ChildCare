<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>RecordType</field>
        <field>CLQ_Program__c</field>
        <field>CLQ_Approver_Notes__c</field>
        <field>CLQ_Transaction_Assigned_To__c</field>
        <field>CLQ_Submission_Date__c</field>
        <field>CLQ_Submitter__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>COL Approvals</description>
        <label>Approval Step 1</label>
        <name>CLQ_Manager_Approval_Step</name>
    </approvalStep>
    <description>Approval Process for Amendment - Change of Location - ODE and Center</description>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>(RecordType.Name =  $Label.CLQ_Program_App_Amendment_ODE_Change_of_Location_RecType || RecordType.Name =  $Label.CLQ_Program_App_Amendment_Center_Change_of_Location_RecType )&amp;&amp; CLQ_Start_Approval__c = True</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approval_Set_Approved_by_Manager_to_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unflag_Start_Approval_Check</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Change_Status_to_Returned_to_Reviewer</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Rejected_Flag_Rejected_By_Manager</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Rejection_Unflag_Start_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>CLQ_Change_Status_to_Approver_Review</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CLQ_Unflag_Approved_By_Manager</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>UnFlag_Rejected_By_Manager</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Change of Location ODE and Center</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>8</processOrder>
    <recallActions>
        <action>
            <name>Recall_Status_Returned_to_Reviewer</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Recall_UnCheck_Approved_by_Manager</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Recall_Unflag_Rejected_by_Manager</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unflag_Start_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
