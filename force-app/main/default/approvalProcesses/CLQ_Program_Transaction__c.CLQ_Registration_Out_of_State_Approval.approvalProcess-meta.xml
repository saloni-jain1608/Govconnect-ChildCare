<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>RecordType</field>
        <field>CLQ_Program__c</field>
        <field>CLQ_Approver_Notes__c</field>
        <field>CLQ_Transaction_Assigned_To__c</field>
        <field>CLQ_Submission_Date__c</field>
        <field>CLQ_Submitter__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>OOS / IHA Approvals</description>
        <label>Approval Step 1</label>
        <name>CLQ_Manager_Approval_Step</name>
    </approvalStep>
    <description>Approval Process for Registration Out of State</description>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>(((1 AND 2) OR 3) AND 4)</booleanFilter>
        <criteriaItems>
            <field>CLQ_Program_Transaction__c.RecordType</field>
            <operation>equals</operation>
            <value>Registration - Out of State</value>
        </criteriaItems>
        <criteriaItems>
            <field>CLQ_Program_Transaction__c.CLQ_Transaction_Type__c</field>
            <operation>equals</operation>
            <value>Registration</value>
        </criteriaItems>
        <criteriaItems>
            <field>CLQ_Program_Transaction__c.RecordType</field>
            <operation>equals</operation>
            <value>In-Home Aide</value>
        </criteriaItems>
        <criteriaItems>
            <field>CLQ_Program_Transaction__c.CLQ_Start_Approval__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approval_Set_Approved_by_Manager_to_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CLQ_Approved_Registration_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unflag_Start_Approval_Check</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>CLQ_ReturntoReviewer_Registration_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Rejected_Flag_Rejected_By_Manager</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Rejection_Unflag_Start_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>CLQ_Unflag_Approved_By_Manager</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CLQ_Update_OOS_Registration_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>UnFlag_Rejected_By_Manager</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>OOS and In Home Aide Approval</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>10</processOrder>
    <recallActions>
        <action>
            <name>CLQ_Reg_Status_Return_to_Reviewer</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Recall_UnCheck_Approved_by_Manager</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Recall_Unflag_Rejected_by_Manager</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unflag_Start_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
