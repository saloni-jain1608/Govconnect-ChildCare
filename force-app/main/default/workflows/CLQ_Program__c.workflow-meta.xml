    <rules>
        <fullName>CLQ_Rule to update Program if Inactive for 335 days</fullName>
        <active>true</active>
        <description>Notify the assigned internal user and the internal supervisor/approver when a program has been continuously inactive for 335 days</description>
        <formula>$Setup.ExecutionControlSetting__c.Run_Workflow__c &amp;&amp;   ISPICKVAL(CLQ_Program_Status__c,&apos;Inactive&apos;) &amp;&amp;  CLQ_Licensing_Specialist__c != NULL</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>CLQ_Email_alert_to_Licensing_Specialist_for_Inactive_Program_after_335days_of_Cr</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>CLQ_Program__c.CLQ_Program_Status_Change_Date__c</offsetFromField>
            <timeLength>335</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>Out of State Expired</fullName>
        <active>true</active>
        <formula>$Setup.ExecutionControlSetting__c.Run_Workflow__c &amp;&amp;  CLQ_Program_Record_Type__c = &apos;Out of State Registration&apos; &amp;&amp;  NOT(CLQ_Expiration_Date__c  = NULL)</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Update_Program_Status_Expired</name>
                <type>FieldUpdate</type>
            </actions>
            <actions>
                <name>Update_Registration_Status</name>
                <type>FieldUpdate</type>
            </actions>
            <offsetFromField>CLQ_Program__c.CLQ_Expiration_Date__c</offsetFromField>
            <timeLength>0</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>Update Closure Date for IHA</fullName>
        <active>true</active>
        <formula>$Setup.ExecutionControlSetting__c.Run_Workflow__c &amp;&amp;  ISPICKVAL( CLQ_Certification_Status__c , &apos;Certified&apos;) &amp;&amp; RecordType.Name = &apos;In-Home Aide&apos; &amp;&amp;  NOT(ISBLANK(CLQ_Certificate_Expiry_Date__c))</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Update_Closure_Date</name>
                <type>FieldUpdate</type>
            </actions>
            <offsetFromField>CLQ_Program__c.CLQ_Certificate_Expiry_Date__c</offsetFromField>
            <timeLength>30</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
        <workflowTimeTriggers>
            <offsetFromField>CLQ_Program__c.CLQ_Certificate_Expiry_Date__c</offsetFromField>
            <timeLength>1</timeLength>
            <workflowTimeTriggerUnit>Hours</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
