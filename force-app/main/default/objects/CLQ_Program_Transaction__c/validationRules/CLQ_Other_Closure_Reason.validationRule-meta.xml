<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CLQ_Other_Closure_Reason</fullName>
    <active>true</active>
    <description>Other Closure Reason Mandaory if Closure Reason is &apos;Other&apos;</description>
    <errorConditionFormula>$Setup.ExecutionControlSetting__c.Run_Validation_Rule__c &amp;&amp; AND( ISPICKVAL( CLQ_Closure_Reason__c,&apos;Other&apos;) , ISBLANK( CLQ_Other_Closure_Reason__c ) )</errorConditionFormula>
    <errorDisplayField>CLQ_Other_Closure_Reason__c</errorDisplayField>
    <errorMessage>Please enter Other Closure Reason</errorMessage>
</ValidationRule>
