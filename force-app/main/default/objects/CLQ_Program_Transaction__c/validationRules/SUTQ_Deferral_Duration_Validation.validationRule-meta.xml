<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>SUTQ_Deferral_Duration_Validation</fullName>
    <active>true</active>
    <description>To Check Deferral Date is entered when Transaction Status is Deferral</description>
    <errorConditionFormula>AND(ISPICKVAL(CLQ_Transaction_Status__c,&apos;Deferral&apos;),ISPICKVAL(SUTQ_Deferral_Duration__c ,&apos;&apos;))</errorConditionFormula>
    <errorMessage>Please Select The Deferral Duration</errorMessage>
</ValidationRule>
